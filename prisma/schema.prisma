// This is your Prisma schema file

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id              String   @id @default(cuid())
  username        String   @unique
  points          Int      @default(0)
  questionsAnswered Int    @default(0) // عدد الأسئلة التي تمت الإجابة عليها بشكل صحيح
  likes           Int      @default(0)
  totalTimeSpent  Int      @default(0) // الوقت الإجمالي بالثواني
  lastActiveAt    DateTime? // آخر مرة كان المستخدم نشطاً
  sessionStartAt  DateTime? // وقت بداية الجلسة الحالية
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([points(sort: Desc)])
  @@index([username])
  @@index([lastActiveAt])
}
